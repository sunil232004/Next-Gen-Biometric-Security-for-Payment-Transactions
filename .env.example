# Backend Environment Variables
# Copy this file to .env and fill in your values

# MongoDB connection string (required)
# Get this from MongoDB Atlas or your MongoDB provider
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/dbname

# Stripe secret key (required for payments)
STRIPE_SECRET_KEY=sk_test_your_stripe_test_key

# Frontend URL for CORS (required when frontend is deployed separately)
# Set this to your frontend URL (e.g., https://your-frontend.vercel.app)
FRONTEND_URL=http://localhost:3001

# Server port (optional, defaults to 5000)
PORT=5000
